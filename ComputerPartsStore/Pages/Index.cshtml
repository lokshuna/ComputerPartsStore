@model IEnumerable<ComputerPartsStore.Models.Accessories>
@{
    ViewData["Title"] = "TechStore - Найкращі комп'ютерні комплектуючі";
}


<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="display-4 fw-bold mb-4">
                        Найкращі комп'ютерні комплектуючі
                    </h1>
                    <p class="lead mb-4">
                        Великий вибір процесорів, відеокарт, оперативної пам'яті та іншого обладнання
                        за найкращими цінами в Україні
                    </p>
                    <div class="hero-actions">
                        <a href="@Url.Action("Catalog", "Home")" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-search me-2"></i>Переглянути каталог
                        </a>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Register", "Account")" class="btn btn-outline-light btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Зареєструватися
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <div class="floating-icons">
                        <div class="floating-icon">
                            <i class="fas fa-microchip"></i>
                        </div>
                        <div class="floating-icon">
                            <i class="fas fa-memory"></i>
                        </div>
                        <div class="floating-icon">
                            <i class="fas fa-tv"></i>
                        </div>
                        <div class="floating-icon">
                            <i class="fas fa-hdd"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quick Stats -->
<section class="py-4 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-3">
                <div class="stat-item">
                    <i class="fas fa-cube text-primary fa-2x mb-2"></i>
                    <h4 class="fw-bold">1000+</h4>
                    <small class="text-muted">Товарів в каталозі</small>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-item">
                    <i class="fas fa-users text-success fa-2x mb-2"></i>
                    <h4 class="fw-bold">5000+</h4>
                    <small class="text-muted">Задоволених клієнтів</small>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-item">
                    <i class="fas fa-shipping-fast text-info fa-2x mb-2"></i>
                    <h4 class="fw-bold">24-48</h4>
                    <small class="text-muted">Годин доставка</small>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-item">
                    <i class="fas fa-shield-alt text-warning fa-2x mb-2"></i>
                    <h4 class="fw-bold">2 роки</h4>
                    <small class="text-muted">Гарантія</small>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2>Категорії товарів</h2>
            <p class="text-muted">Оберіть категорію, яка вас цікавить</p>
        </div>
        <div class="row">
            @if (ViewBag.Categories != null)
            {
                @foreach (var category in (IEnumerable<ComputerPartsStore.Models.Catalog>)ViewBag.Categories)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <a href="@Url.Action("Catalog", "Home", new { categoryId = category.Catalog_id })"
                           class="text-decoration-none">
                            <div class="category-card card h-100 shadow-sm">
                                <div class="card-body text-center p-4">
                                    <div class="category-icon mb-3">
                                        @if (category.Accessory_type == "Процесори")
                                        {
                                            <i class="fas fa-microchip"></i>
                                        }
                                        else if (category.Accessory_type == "Відеокарти")
                                        {
                                            <i class="fas fa-tv"></i>
                                        }
                                        else if (category.Accessory_type == "Оперативна пам'ять")
                                        {
                                            <i class="fas fa-memory"></i>
                                        }
                                        else if (category.Accessory_type == "Материнські плати")
                                        {
                                            <i class="fas fa-project-diagram"></i>
                                        }
                                        else if (category.Accessory_type == "Блоки живлення")
                                        {
                                            <i class="fas fa-battery-full"></i>
                                        }
                                        else if (category.Accessory_type == "Накопичувачі")
                                        {
                                            <i class="fas fa-hdd"></i>
                                        }
                                        else if (category.Accessory_type == "Корпуси")
                                        {
                                            <i class="fas fa-cube"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-microchip"></i>
                                        }
                                    </div>
                                    <h5 class="card-title text-dark">@category.Accessory_type</h5>
                                    <div class="btn btn-outline-primary btn-sm">
                                        Переглянути <i class="fas fa-arrow-right ms-2"></i>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Featured Products Section -->
@if (Model != null && Model.Any())
{
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2>Рекомендовані товари</h2>
                <p class="text-muted">Найпопularніші товари цього місяця</p>
            </div>
            <div class="row">
                @{
                    var featuredProducts = Model.Take(6);
                }
                @foreach (var product in featuredProducts)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="product-card card h-100 shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <div class="product-image text-center mb-3">
                                    @if (product.Catalog.Accessory_type == "Процесори")
                                    {
                                        <i class="fas fa-microchip text-primary" style="font-size: 3rem;"></i>
                                    }
                                    else if (product.Catalog.Accessory_type == "Відеокарти")
                                    {
                                        <i class="fas fa-tv text-success" style="font-size: 3rem;"></i>
                                    }
                                    else if (product.Catalog.Accessory_type == "Оперативна пам'ять")
                                    {
                                        <i class="fas fa-memory text-info" style="font-size: 3rem;"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-cube text-secondary" style="font-size: 3rem;"></i>
                                    }
                                </div>
                                <h6 class="card-title">@product.Accessory_Name</h6>
                                <small class="text-muted mb-2">@product.Catalog.Accessory_type</small>
                                <p class="card-text flex-grow-1 small">@product.Specifications</p>

                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <h5 class="text-primary mb-1">@product.Accessory_Price.ToString("N0") ₴</h5>
                                            @if (product.Accessory_Availability == "В наявності")
                                            {
                                                <small class="badge bg-success">@product.Accessory_Availability</small>
                                            }
                                            else
                                            {
                                                <small class="badge bg-danger">@product.Accessory_Availability</small>
                                            }
                                        </div>
                                    </div>

                                    <div class="d-flex gap-2">
                                        <a href="@Url.Action("ProductDetails", "Home", new { id = product.Accessory_id })"
                                           class="btn btn-outline-primary btn-sm flex-fill">
                                            <i class="fas fa-eye me-1"></i>Детальніше
                                        </a>
                                        @if (product.Accessory_Availability == "В наявності")
                                        {
                                            <button onclick="addToCart(@product.Accessory_id)"
                                                    class="btn btn-primary btn-sm flex-fill">
                                                <i class="fas fa-cart-plus me-1"></i>До кошика
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a href="@Url.Action("Catalog", "Home")" class="btn btn-primary btn-lg">
                    <i class="fas fa-th-large me-2"></i>Переглянути всі товари
                </a>
            </div>
        </div>
    </section>
}

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2>Чому обирають нас?</h2>
            <p class="text-muted">Переваги покупок в TechStore</p>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-card text-center h-100">
                    <div class="feature-icon bg-primary text-white mb-3">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                    <h5>Швидка доставка</h5>
                    <p class="text-muted">Доставка по всій Україні протягом 1-3 днів. Безкоштовна доставка від 1000₴</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-card text-center h-100">
                    <div class="feature-icon bg-success text-white mb-3">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h5>Гарантія якості</h5>
                    <p class="text-muted">Офіційна гарантія на всі товари від виробника. Обмін та повернення протягом 14 днів</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-card text-center h-100">
                    <div class="feature-icon bg-info text-white mb-3">
                        <i class="fas fa-headset"></i>
                    </div>
                    <h5>Підтримка 24/7</h5>
                    <p class="text-muted">Консультації та підтримка цілодобово. Допоможемо з вибором та налаштуванням</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="feature-card text-center h-100">
                    <div class="feature-icon bg-warning text-white mb-3">
                        <i class="fas fa-credit-card"></i>
                    </div>
                    <h5>Зручна оплата</h5>
                    <p class="text-muted">Різні способи оплати: готівка, карткою, розстрочка. Безпечні платежі</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Demo Access Section -->
@if (!User.Identity.IsAuthenticated)
{
    <section class="py-5 bg-primary text-white">
        <div class="container">
            <div class="text-center mb-4">
                <h3>
                    <i class="fas fa-flask me-2"></i>Демо-режим для тестування
                </h3>
                <p class="mb-4">Протестуйте функціональність системи з різними ролями користувачів</p>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-4 mb-3">
                    <div class="card bg-light text-dark h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-cogs text-primary fa-3x mb-3"></i>
                            <h5>Оператор</h5>
                            <p class="small">Управління замовленнями, товарами та статистикою</p>
                            <button class="btn btn-primary btn-sm" onclick="quickLogin('operator', 'operator123')">
                                Увійти як оператор
                            </button>
                            <div class="mt-2">
                                <small class="text-muted">
                                    Логін: <code>operator</code><br>
                                    Пароль: <code>operator123</code>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card bg-light text-dark h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-warehouse text-success fa-3x mb-3"></i>
                            <h5>Комірник</h5>
                            <p class="small">Збирання замовлень, управління складом</p>
                            <button class="btn btn-success btn-sm" onclick="quickLogin('storekeeper', 'store123')">
                                Увійти як комірник
                            </button>
                            <div class="mt-2">
                                <small class="text-muted">
                                    Логін: <code>storekeeper</code><br>
                                    Пароль: <code>store123</code>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card bg-light text-dark h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-user text-info fa-3x mb-3"></i>
                            <h5>Покупець</h5>
                            <p class="small">Покупки, кошик, відстеження замовлень</p>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-info btn-sm">
                                Зареєструватися
                            </a>
                            <div class="mt-2">
                                <small class="text-muted">
                                    Створіть свій власний акаунт покупця
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}