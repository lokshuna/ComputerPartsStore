@model ComputerPartsStore.Models.LoginViewModel
@{
    ViewData["Title"] = "Вхід";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg mt-5">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-sign-in-alt me-2"></i>Вхід до системи
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Login" class="form-label">
                                <i class="fas fa-user me-2"></i>Логін
                            </label>
                            <input asp-for="Login" class="form-control form-control-lg" placeholder="Введіть ваш логін" />
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock me-2"></i>Пароль
                            </label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Введіть ваш пароль" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">
                                Запам'ятати мене
                            </label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Увійти
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-light">
                    <p class="mb-0">
                        Ще не маєте аккаунта?
                        <a href="@Url.Action("Register", "Account")" class="text-decoration-none">
                            Зареєструватися
                        </a>
                    </p>
                </div>
            </div>

            <!-- Demo accounts info -->
            <div class="card mt-4 border-info">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Демо акаунти для тестування
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Оператор:</h6>
                            <p class="mb-1"><strong>Логін:</strong> operator</p>
                            <p class="mb-0"><strong>Пароль:</strong> operator123</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-success">Комірник:</h6>
                            <p class="mb-1"><strong>Логін:</strong> storekeeper</p>
                            <p class="mb-0"><strong>Пароль:</strong> store123</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}