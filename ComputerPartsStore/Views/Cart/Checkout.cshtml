@model ComputerPartsStore.Models.CheckoutViewModel
@{
    ViewData["Title"] = "Оформлення замовлення";
}

<div class="container py-4">
    <h2 class="mb-4">
        <i class="fas fa-credit-card me-2"></i>Оформлення замовлення
    </h2>

    <form asp-action="PlaceOrder" method="post">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-lg-8">
                <!-- Customer Information -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-user me-2"></i>Інформація про покупця
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Ім'я:</strong> @Model.Customer.Name @Model.Customer.Second_Name</p>
                                <p><strong>Телефон:</strong> @Model.Customer.Phone_Number</p>
                                <p><strong>Email:</strong> @Model.Customer.User_login</p>
                            </div>
                            <div class="col-md-6">
                                @if (Model.Customer.Patronymic != null)
                                {
                                    <p><strong>По батькові:</strong> @Model.Customer.Patronymic</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Delivery Address -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-map-marker-alt me-2"></i>Адреса доставки
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.DeliveryAddress != null)
                        {
                            <p>
                                <strong>Адреса:</strong>
                                @Model.DeliveryAddress.City,
                                @Model.DeliveryAddress.Region,
                                буд. @Model.DeliveryAddress.House_Number
                            </p>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Адреса доставки не вказана. Будь ласка, оновіть свій профіль.
                            </div>
                        }
                    </div>
                </div>

                <!-- Order Items -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>Товари в замовленні
                        </h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="row align-items-center border-bottom py-3">
                                <div class="col-md-6">
                                    <h6 class="mb-1">@item.Accessory_Name</h6>
                                    <small class="text-muted">@item.Accessory_Price.ToString("N0") ₴ × @item.Quantity</small>
                                </div>
                                <div class="col-md-3 text-center">
                                    <span class="badge bg-primary">@item.Quantity шт.</span>
                                </div>
                                <div class="col-md-3 text-end">
                                    <strong>@item.Total.ToString("N0") ₴</strong>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Notes -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-comment me-2"></i>Коментар до замовлення
                        </h5>
                    </div>
                    <div class="card-body">
                        <textarea asp-for="Notes" class="form-control" rows="3"
                                  placeholder="Введіть додаткові побажання або коментарі до замовлення (необов'язково)"></textarea>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Order Summary -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Підсумок замовлення</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Товарів:</span>
                            <span>@Model.CartItems.Sum(i => i.Quantity)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Сума товарів:</span>
                            <span>@Model.TotalAmount.ToString("N0") ₴</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Доставка:</span>
                            <span class="text-success">Безкоштовно</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <h5>До сплати:</h5>
                            <h5 class="text-primary">@Model.TotalAmount.ToString("N0") ₴</h5>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check me-2"></i>Підтвердити замовлення
                            </button>
                            <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Повернутися до кошика
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Payment Info -->
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>Інформація про оплату
                        </h6>
                    </div>
                    <div class="card-body">
                        <small class="text-muted">
                            Оплата здійснюється при отриманні замовлення.
                            Ви можете оплатити готівкою або карткою кур'єру.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>