@model List<ComputerPartsStore.Models.CartItem>
@{
    ViewData["Title"] = "Кошик";
}

<div class="container py-4">
    <h2 class="mb-4">
        <i class="fas fa-shopping-cart me-2"></i>Кошик покупок
    </h2>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        @foreach (var item in Model)
                        {
                            <div class="row align-items-center border-bottom py-3" id="cart-item-@item.Accessory_id">
                                <div class="col-md-6">
                                    <h6 class="mb-1">@item.Accessory_Name</h6>
                                    <p class="text-muted mb-0">
                                        Ціна за одиницю: <strong>@item.Accessory_Price.ToString("N0") ₴</strong>
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <button class="btn btn-outline-secondary btn-sm" type="button"
                                                onclick="updateQuantity(@item.Accessory_id, @(item.Quantity - 1))">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <input type="number" class="form-control text-center"
                                               value="@item.Quantity" min="1" max="10"
                                               onchange="updateQuantity(@item.Accessory_id, this.value)">
                                        <button class="btn btn-outline-secondary btn-sm" type="button"
                                                onclick="updateQuantity(@item.Accessory_id, @(item.Quantity + 1))">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <strong class="text-primary">@item.Total.ToString("N0") ₴</strong>
                                </div>
                                <div class="col-md-1">
                                    <button class="btn btn-outline-danger btn-sm"
                                            onclick="removeFromCart(@item.Accessory_id)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="mt-3">
                    <a href="@Url.Action("Catalog", "Home")" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Продовжити покупки
                    </a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Підсумок замовлення</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Товарів:</span>
                            <span id="items-count">@Model.Sum(i => i.Quantity)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Сума:</span>
                            <strong id="total-amount">@Model.Sum(i => i.Total).ToString("N0") ₴</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <h5>До сплати:</h5>
                            <h5 class="text-primary" id="final-total">@Model.Sum(i => i.Total).ToString("N0") ₴</h5>
                        </div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="d-grid">
                                <a href="@Url.Action("Checkout", "Cart")" class="btn btn-primary btn-lg">
                                    <i class="fas fa-credit-card me-2"></i>Оформити замовлення
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Для оформлення замовлення необхідно
                                <a href="@Url.Action("Login", "Account", new { returnUrl = Url.Action("Checkout", "Cart") })">увійти</a>
                                або <a href="@Url.Action("Register", "Account")">зареєструватися</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart text-muted" style="font-size: 5rem;"></i>
            <h3 class="mt-3 text-muted">Ваш кошик порожній</h3>
            <p class="text-muted">Додайте товари до кошика, щоб продовжити покупки</p>
            <a href="@Url.Action("Catalog", "Home")" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag me-2"></i>Перейти до каталогу
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        function updateQuantity(productId, quantity) {
            quantity = parseInt(quantity);
            if (quantity < 1) {
                removeFromCart(productId);
                return;
            }

            $.post('@Url.Action("UpdateQuantity", "Cart")', {
                productId: productId,
                quantity: quantity
            }, function(data) {
                if (data.success) {
                    location.reload();
                } else {
                    showToast('Помилка при оновленні кількості', 'error');
                }
            });
        }

        function removeFromCart(productId) {
            if (confirm('Видалити товар з кошика?')) {
                $.post('@Url.Action("RemoveFromCart", "Cart")', {
                    productId: productId
                }, function(data) {
                    if (data.success) {
                        location.reload();
                    } else {
                        showToast('Помилка при видаленні товару', 'error');
                    }
                });
            }
        }
    </script>
}