@model IEnumerable<ComputerPartsStore.Models.Order_list>
@{
    ViewData["Title"] = "Мої замовлення";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-list-alt me-2"></i>Мої замовлення
        </h2>
        <a href="@Url.Action("Catalog", "Home")" class="btn btn-primary">
            <i class="fas fa-shopping-bag me-2"></i>Продовжити покупки
        </a>
    </div>

    @if (Model.Any())
    {
            <!-- Orders Summary Cards -->
            <div class="row mb-4">
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card bg-primary text-white h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-shopping-cart fa-2x mb-2"></i>
                            <h4 class="mb-1">@Model.Count()</h4>
                            <small>Всього замовлень</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card bg-warning text-white h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-clock fa-2x mb-2"></i>
                            <h4 class="mb-1">@Model.Count(o => o.Order_status_id <= 4)</h4>
                            <small>В обробці</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card bg-info text-white h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-truck fa-2x mb-2"></i>
                            <h4 class="mb-1">@Model.Count(o => o.Order_status_id == 5)</h4>
                            <small>Доставляються</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card bg-success text-white h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-check-circle fa-2x mb-2"></i>
                            <h4 class="mb-1">@Model.Count(o => o.Order_status_id == 6)</h4>
                            <small>Доставлені</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Orders List -->
            <div class="row">
            @foreach (var order in Model)
            {
                        <div class="col-lg-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">
                                            <i class="fas fa-receipt me-2"></i>Замовлення #@order.Overlay_id
                                        </h6>
                                        <small class="text-muted">@order.Order_Date.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>
                                    <span class="badge bg-@GetStatusColor(order.Order_status_id) fs-6">
                                @order.Order_Status.Status
                                    </span>
                                </div>
                                <div class="card-body">
                                    <!-- Order Items Preview -->
                                    <div class="mb-3">
                                        <h6 class="text-muted mb-2">Товари:</h6>
                                @foreach (var item in order.Order_Items.Take(2))
                                {
                                                <div class="d-flex justify-content-between align-items-center mb-1">
                                                    <small>@item.Accessories.Accessory_Name</small>
                                                    <small class="text-muted">@item.Item_Count шт.</small>
                                                </div>
                                }
                                @if (order.Order_Items.Count() > 2)
                                {
                                                <small class="text-muted">...та ще @(order.Order_Items.Count() - 2) товар(ів)</small>
                                }
                                    </div>

                                    <!-- Order Summary -->
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <small class="text-muted">Товарів:</small>
                                            <strong>@order.Order_Items.Sum(oi => oi.Item_Count)</strong>
                                        </div>
                                        <div>
                                            <small class="text-muted">Сума:</small>
                                            <strong class="text-primary">@order.Order_Items.Sum(oi => oi.Item_Price * oi.Item_Count).ToString("N0") ₴</strong>
                                        </div>
                                    </div>

                                    <!-- Tracking Info -->
                            @if (!string.IsNullOrEmpty(order.TrackingNumber))
                            {
                                            <div class="alert alert-info py-2">
                                                <small>
                                                    <i class="fas fa-truck me-2"></i>
                                                    <strong>Номер відстеження:</strong>
                                                    <code>@order.TrackingNumber</code>
                                                </small>
                                            </div>
                            }

                                    <!-- Status-specific Messages -->
                            @switch (order.Order_status_id)
                            {
                                case 1:
                                                    <div class="alert alert-warning py-2">
                                                        <small>
                                                            <i class="fas fa-clock me-2"></i>
                                                            Ваше замовлення прийнято. Очікуйте дзвінка оператора.
                                                        </small>
                                                    </div>
                                    break;
                                case 2:
                                                    <div class="alert alert-info py-2">
                                                        <small>
                                                            <i class="fas fa-phone me-2"></i>
                                                            Замовлення підтверджено оператором.
                                                        </small>
                                                    </div>
                                    break;
                                case 3:
                                case 4:
                                                    <div class="alert alert-primary py-2">
                                                        <small>
                                                            <i class="fas fa-box me-2"></i>
                                                            Ваше замовлення збирається на складі.
                                                        </small>
                                                    </div>
                                    break;
                                case 5:
                                                    <div class="alert alert-info py-2">
                                                        <small>
                                                            <i class="fas fa-shipping-fast me-2"></i>
                                                            Замовлення відправлено і в дорозі до вас.
                                                        </small>
                                                    </div>
                                    break;
                                case 6:
                                                    <div class="alert alert-success py-2">
                                                        <small>
                                                            <i class="fas fa-check-circle me-2"></i>
                                                            Замовлення успішно доставлено. Дякуємо за покупку!
                                                        </small>
                                                    </div>
                                    break;
                                case 7:
                                                    <div class="alert alert-danger py-2">
                                                        <small>
                                                            <i class="fas fa-times-circle me-2"></i>
                                                            Замовлення скасовано.
                                                        </small>
                                                    </div>
                                    break;
                            }
                                </div>
                                <div class="card-footer bg-light">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            Замовлено @order.Order_Date.ToString("dd.MM.yyyy")
                                        </small>
                                        <a href="@Url.Action("OrderDetails", "Cart", new { id = order.Order_id })" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>Деталі
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
            }
            </div>

            <!-- Order Status Legend -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Статуси замовлень
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-warning me-2">Нове</span>
                                <small>Замовлення прийнято, очікується підтвердження</small>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-info me-2">Прийняте</span>
                                <small>Замовлення підтверджено оператором</small>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-primary me-2">Формується</span>
                                <small>Замовлення збирається на складі</small>
                            </div>
                            <div class="d-flex align-items-center">
                                <span class="badge bg-secondary me-2">Сформоване</span>
                                <small>Замовлення готове до відправки</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-info me-2">Доставляється</span>
                                <small>Замовлення відправлено кур'єром</small>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-success me-2">Доставлене</span>
                                <small>Замовлення успішно доставлено</small>
                            </div>
                            <div class="d-flex align-items-center">
                                <span class="badge bg-danger me-2">Скасоване</span>
                                <small>Замовлення скасовано</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    }
    else
    {
            <!-- Empty State -->
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-shopping-bag text-muted" style="font-size: 5rem; opacity: 0.3;"></i>
                </div>
                <h3 class="text-muted mb-3">У вас поки немає замовлень</h3>
                <p class="text-muted mb-4">
                    Оформіть своє перше замовлення в нашому каталозі товарів
                </p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="@Url.Action("Catalog", "Home")" class="btn btn-primary btn-lg">
                        <i class="fas fa-shopping-bag me-2"></i>Переглянути каталог
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-home me-2"></i>На головну
                    </a>
                </div>
            </div>
    }
</div>

@functions {
    private string GetStatusColor(int statusId)
    {
        return statusId switch
        {
            1 => "warning",      // Нове
            2 => "info",         // Прийняте
            3 => "primary",      // Формується
            4 => "secondary",    // Сформоване
            5 => "info",         // Доставляється
            6 => "success",      // Доставлене
            7 => "danger",       // Скасоване
            _ => "dark"
        };
    }
}