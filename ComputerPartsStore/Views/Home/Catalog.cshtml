@model IEnumerable<ComputerPartsStore.Models.Accessories>
@{
    ViewData["Title"] = "Каталог товарів";
    var categories = ViewBag.Categories as IEnumerable<ComputerPartsStore.Models.Catalog>;
    var currentCategory = ViewBag.CurrentCategory as int?;
    var search = ViewBag.Search as string;
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Sidebar with filters -->
        <div class="col-lg-3 col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-filter me-2"></i>Фільтри
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Search -->
                    <form method="get" action="@Url.Action("Catalog", "Home")">
                        <input type="hidden" name="categoryId" value="@currentCategory" />
                        <div class="mb-3">
                            <label class="form-label">Пошук</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="search"
                                       value="@search" placeholder="Введіть назву товару...">
                                <button class="btn btn-outline-primary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Categories -->
                    <div class="mb-3">
                        <label class="form-label">Категорії</label>
                        <div class="list-group list-group-flush">
                            <a href="@Url.Action("Catalog", "Home", new { search = search })"
                               class="list-group-item list-group-item-action @(currentCategory == null ? "active" : "")">
                                <i class="fas fa-th-large me-2"></i>Всі категорії
                            </a>
                            @if (categories != null)
                            {
                                @foreach (var category in categories)
                                {
                                    <a href="@Url.Action("Catalog", "Home", new { categoryId = category.Catalog_id, search = search })"
                                       class="list-group-item list-group-item-action @(currentCategory == category.Catalog_id ? "active" : "")">
                                        @switch (category.Accessory_type)
                                        {
                                            case "Процесори":
                                                <i class="fas fa-microchip me-2"></i>
                                                break;
                                            case "Відеокарти":
                                                <i class="fas fa-tv me-2"></i>
                                                break;
                                            case "Оперативна пам'ять":
                                                <i class="fas fa-memory me-2"></i>
                                                break;
                                            case "Материнські плати":
                                                <i class="fas fa-project-diagram me-2"></i>
                                                break;
                                            case "Блоки живлення":
                                                <i class="fas fa-battery-full me-2"></i>
                                                break;
                                            case "Накопичувачі":
                                                <i class="fas fa-hdd me-2"></i>
                                                break;
                                            default:
                                                <i class="fas fa-cube me-2"></i>
                                                break;
                                        }
                                        @category.Accessory_type
                                    </a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products -->
        <div class="col-lg-9 col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>
                        @if (currentCategory.HasValue)
                        {
                            var selectedCategory = categories?.FirstOrDefault(c => c.Catalog_id == currentCategory.Value);
                            @selectedCategory?.Accessory_type
                        }
                        else
                        {
                            @:Каталог товарів
                        }
                    </h2>
                    <p class="text-muted mb-0">Знайдено @Model.Count() товарів</p>
                </div>

                @if (!string.IsNullOrEmpty(search) || currentCategory.HasValue)
                {
                    <a href="@Url.Action("Catalog", "Home")" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Скинути фільтри
                    </a>
                }
            </div>

            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-xl-4 col-lg-6 col-md-12 mb-4">
                            <div class="card h-100 shadow-sm product-card">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@product.Accessory_Name</h5>
                                    <p class="text-muted mb-2">
                                        <small>@product.Catalog.Accessory_type</small>
                                    </p>
                                    <p class="card-text flex-grow-1">@product.Specifications</p>

                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <div>
                                                <h4 class="text-primary mb-1">@product.Accessory_Price.ToString("N0") ₴</h4>
                                                <span class="badge bg-@(product.Accessory_Availability == "В наявності" ? "success" : "danger")">
                                                    @product.Accessory_Availability
                                                </span>
                                            </div>
                                        </div>

                                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                            <a href="@Url.Action("ProductDetails", "Home", new { id = product.Accessory_id })"
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye me-1"></i>Детальніше
                                            </a>
                                            @if (product.Accessory_Availability == "В наявності")
                                            {
                                                <button onclick="addToCart(@product.Accessory_id)"
                                                        class="btn btn-primary btn-sm">
                                                    <i class="fas fa-cart-plus me-1"></i>До кошика
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary btn-sm" disabled>
                                                    <i class="fas fa-times me-1"></i>Немає в наявності
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-search text-muted" style="font-size: 4rem;"></i>
                    <h3 class="mt-3 text-muted">Товари не знайдено</h3>
                    <p class="text-muted">Спробуйте змінити параметри пошуку або оберіть іншу категорію</p>
                    <a href="@Url.Action("Catalog", "Home")" class="btn btn-primary">
                        Переглянути всі товари
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

    .list-group-item.active {
        background-color: var(--bs-primary);
        border-color: var(--bs-primary);
    }

    .list-group-item:hover:not(.active) {
        background-color: rgba(var(--bs-primary-rgb), 0.1);
    }
</style>