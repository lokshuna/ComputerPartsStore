@model IEnumerable<ComputerPartsStore.Models.Accessories>
@{
    ViewData["Title"] = "Головна сторінка";
}

<!-- Hero Section -->
<section class="bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    Найкращі комп'ютерні комплектуючі
                </h1>
                <p class="lead mb-4">
                    Великий вибір процесорів, відеокарт, оперативної пам'яті та іншого обладнання за найкращими цінами
                </p>
                <a href="@Url.Action("Catalog", "Home")" class="btn btn-light btn-lg">
                    <i class="fas fa-search me-2"></i>Переглянути каталог
                </a>
            </div>
            <div class="col-lg-6">
                <div class="text-center">
                    <i class="fas fa-desktop" style="font-size: 200px; opacity: 0.8;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Категорії товарів</h2>
        <div class="row">
            @if (ViewBag.Categories != null)
            {
                @foreach (var category in (IEnumerable<ComputerPartsStore.Models.Catalog>)ViewBag.Categories)
                {
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="card h-100 shadow-sm category-card">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    @switch (category.Accessory_type)
                                    {
                                        case "Процесори":
                                            <i class="fas fa-microchip text-primary" style="font-size: 3rem;"></i>
                                            break;
                                        case "Відеокарти":
                                            <i class="fas fa-tv text-success" style="font-size: 3rem;"></i>
                                            break;
                                        case "Оперативна пам'ять":
                                            <i class="fas fa-memory text-info" style="font-size: 3rem;"></i>
                                            break;
                                        case "Материнські плати":
                                            <i class="fas fa-project-diagram text-warning" style="font-size: 3rem;"></i>
                                            break;
                                        case "Блоки живлення":
                                            <i class="fas fa-battery-full text-danger" style="font-size: 3rem;"></i>
                                            break;
                                        case "Накопичувачі":
                                            <i class="fas fa-hdd text-secondary" style="font-size: 3rem;"></i>
                                            break;
                                        default:
                                            <i class="fas fa-cube text-dark" style="font-size: 3rem;"></i>
                                            break;
                                    }
                                </div>
                                <h5 class="card-title">@category.Accessory_type</h5>
                                <a href="@Url.Action("Catalog", "Home", new { categoryId = category.Catalog_id })" 
                                   class="btn btn-outline-primary">
                                    Переглянути товари
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Featured Products Section -->
@if (Model.Any())
{
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5">Рекомендовані товари</h2>
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 shadow-sm product-card">
                            <div class="card-body">
                                <h5 class="card-title">@product.Accessory_Name</h5>
                                <p class="text-muted mb-2">@product.Catalog.Accessory_type</p>
                                <p class="card-text">@product.Specifications</p>
                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <div>
                                        <h4 class="text-primary mb-0">@product.Accessory_Price.ToString("N0") ₴</h4>
                                        <small class="text-@(product.Accessory_Availability == "В наявності" ? "success" : "danger")">
                                            @product.Accessory_Availability
                                        </small>
                                    </div>
                                    <div>
                                        <a href="@Url.Action("ProductDetails", "Home", new { id = product.Accessory_id })" 
                                           class="btn btn-outline-primary btn-sm me-2">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (product.Accessory_Availability == "В наявності")
                                        {
                                            <button onclick="addToCart(@product.Accessory_id)" 
                                                    class="btn btn-primary btn-sm">
                                                <i class="fas fa-cart-plus"></i>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a href="@Url.Action("Catalog", "Home")" class="btn btn-primary btn-lg">
                    Переглянути всі товари
                </a>
            </div>
        </div>
    </section>
}

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="text-center">
                    <div class="mb-3">
                        <i class="fas fa-shipping-fast text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5>Швидка доставка</h5>
                    <p class="text-muted">Доставка по всій Україні протягом 1-3 днів</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="text-center">
                    <div class="mb-3">
                        <i class="fas fa-shield-alt text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h5>Гарантія якості</h5>
                    <p class="text-muted">Офіційна гарантія на всі товари</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="text-center">
                    <div class="mb-3">
                        <i class="fas fa-headset text-info" style="font-size: 3rem;"></i>
                    </div>
                    <h5>Підтримка 24/7</h5>
                    <p class="text-muted">Консультації та підтримка цілодобово</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="text-center">
                    <div class="mb-3">
                        <i class="fas fa-credit-card text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <h5>Зручна оплата</h5>
                    <p class="text-muted">Різні способи оплати та розстрочка</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .category-card, .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }
    
    .category-card:hover, .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
    }
</style>