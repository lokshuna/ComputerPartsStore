@model IEnumerable<ComputerPartsStore.Models.Order_list>
@{
    ViewData["Title"] = "Панель оператора";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-cogs me-2"></i>Панель оператора
        </h2>
        <div>
            <a href="@Url.Action("Products", "Operator")" class="btn btn-outline-primary me-2">
                <i class="fas fa-cube me-2"></i>Управління товарами
            </a>
            <a href="@Url.Action("Statistics", "Operator")" class="btn btn-outline-info">
                <i class="fas fa-chart-bar me-2"></i>Статистика
            </a>
        </div>
    </div>

    <!-- Order Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Всього замовлень</h6>
                            <h3 class="mb-0">@Model.Count()</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-shopping-cart fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Нові замовлення</h6>
                            <h3 class="mb-0">@Model.Count(o => o.Order_status_id == 1)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exclamation-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">В обробці</h6>
                            <h3 class="mb-0">@Model.Count(o => o.Order_status_id >= 2 && o.Order_status_id <= 4)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Завершені</h6>
                            <h3 class="mb-0">@Model.Count(o => o.Order_status_id == 6)</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Список замовлень
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>№ Замовлення</th>
                                <th>Клієнт</th>
                                <th>Дата</th>
                                <th>Статус</th>
                                <th>Товарів</th>
                                <th>Сума</th>
                                <th>Дії</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.OrderBy(o => o.Order_Date))
                            {
                                <tr>
                                    <td>
                                        <strong>#@order.Overlay_id</strong>
                                    </td>
                                    <td>
                                        @order.Customer.Name @order.Customer.Second_Name
                                        <br>
                                        <small class="text-muted">@order.Customer.Phone_Number</small>
                                    </td>
                                    <td>
                                        @order.Order_Date.ToString("dd.MM.yyyy HH:mm")
                                    </td>
                                    <td>
                                        <span class="badge bg-@GetStatusColor(order.Order_status_id)">
                                            @order.Order_Status.Status
                                        </span>
                                    </td>
                                    <td>
                                        @order.Order_Items.Sum(oi => oi.Item_Count)
                                    </td>
                                    <td>
                                        <strong>@order.Order_Items.Sum(oi => oi.Item_Price * oi.Item_Count).ToString("N0") ₴</strong>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("OrderDetails", "Operator", new { id = order.Order_id })"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>Деталі
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox text-muted" style="font-size: 4rem;"></i>
                    <h4 class="mt-3 text-muted">Замовлень поки немає</h4>
                    <p class="text-muted">Нові замовлення з'являться тут автоматично</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    private string GetStatusColor(int statusId)
    {
        return statusId switch
        {
            1 => "warning",      // Нове
            2 => "info",         // Прийняте
            3 => "primary",      // Формується
            4 => "secondary",    // Сформоване
            5 => "info",         // Доставляється
            6 => "success",      // Доставлене
            7 => "danger",       // Скасоване
            _ => "dark"
        };
    }
}